{{!< main}}

<div class="container">
  <h1>All Job Postings</h1>
  <div class="posts">
    {{#each jobPostings}}
      <article class="card">
        <div class="card-header flex-row justify-space-between">
          <h2>
            <a href="/jobpostings/{{id}}">{{position}}</a>
          </h2>
          <div>
            Posted by {{organization}} on {{format_date date_published}}
          </div>
        </div>
        <div class="card-body">
          {{description}}
        </div>
      </article>
    {{/each}}
  </div>
</div>
